{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./dist/client/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/client/ts/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}