{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext", // Adjusted for better compatibility with Webpack's dynamic import handling
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/shared/*", "src/client/*"]
    }
    // Removed "outDir" since Webpack handles output
  },
  "include": [
    "src/client/ts/**/*",
    "src/shared/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}